{
    "compilerOptions": {
        "target": "ES2021",
        "outDir": "./dist/",
        "lib": [
            "dom",
            "dom.iterable",
            "ES2021.String"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx"
    },
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "include": [
        "./src/**/*",
        "./webpack.config.ts",
        "./my-types/**/*"
    ]
}
